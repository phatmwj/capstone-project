<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">#1E1F21</item>
        <item name="android:statusBarColor">#1E1F21</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="WhiteAppTheme" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@color/white</item>
    </style>

    <style name="roundImg">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomLoadingDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="fontFamily">@font/application_font</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/application_font</item>
    </style>
    <style name="MyEditTextStyle">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>
    <style name="MyButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/my_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <!-- Splash Acitivity -->
    <style name="Splash" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/welcome_color</item>
        <item name="android:statusBarColor">@color/welcome_color</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/white</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!-- Welcome Acitivity -->
    <style name="Welcome" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="fontFamily">@font/application_font</item>
        <item name="android:fontFamily">@font/application_font</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/black</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppButtonStyle" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/app_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="backgroundTint" >@color/button_state_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="username">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_7ssp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="location_request" >
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="roboto_medium">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>
    <style name="roboto_bold">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="new_password_title">
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_30ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="new_password_subtitle">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/grey_text</item>
    </style>

    <style name="new_password_text">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="show_new_password">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">#7EA567</item>

    </style>

    <style name="title">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="NextBtn" parent="Widget.AppCompat.Button.Colored">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_btn_next</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="send_new_otp">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:textColor">#898A8D</item>

    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/green_light</item>
        <item name="colorOnPrimary">@color/green_light</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

</resources>